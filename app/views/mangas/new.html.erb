<h1>おすすめマンガ</h1>
<h3>新規投稿ページ</h3>
<%= form_for @manga do |f| %>


  <div class="field">
    <%= f.label :タイトル %>
    <%= f.text_field :title, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :著者 %>
    <%= f.text_field :author, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :あらすじ  %>
    <%= f.text_area :arasuzi, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :感想  %>
    <%= f.text_area :kansou, :size => "30x2" %>
  </div>
  <h5>総合評価</h5>
     <div class="post_form">
        <%= f.radio_button :overall, 5 ,id: 'star1'%>
        <label for="star1"><span class="text">最高</span>★</label>
    
        <%= f.radio_button :overall, 4 ,id: 'star2'%>
        <label for="star2"><span class="text">良い</span>★</label>
    
        <%= f.radio_button :overall, 3 ,id: 'star3'%>
        <label for="star3"><span class="text">普通</span>★</label>
    
        <%= f.radio_button :overall, 2 ,id: 'star4'%>
        <label for="star4"><span class="text">悪い</span>★</label>
    
        <%= f.radio_button :overall, 1 ,id: 'star5'%>
        <label for="star5"><span class="text">最悪</span>★</label>
     </div>

  <div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
  </div>

  <%= f.submit "投稿する" %>
  <% end %>

<%= link_to "一覧に戻る", mangas_path %>